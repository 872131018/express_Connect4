extends layout

block content
    div(class='w3-row')
        div(class='w3-quarter w3-black w3-container w3-center', style='height:700px')
            div(class='w3-padding-64')
                h1 Connect4x4x4
            div(class='w3-padding-64')
                a(href='#', class='w3-btn w3-btn-block w3-hover-blue-grey w3-padding-16') Messages
        div(class='w3-threequarter w3-white w3-container', style='height:700px')
            div(class='w3-padding-64 w3-center')
                h1 GameBoard
                each layer, layer_index in cube
                    div(class='layer'+layer_index)
                        each row, row_index in layer
                            div(class='w3-row')
                                span(class='w3-col s2 circle')
                                each cell, cell_index in row
                                    span(class='w3-col s1 circle w3-black')
                                span(class='w3-col s2 circle')
